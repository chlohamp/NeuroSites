{
  "name": "Package Documentation",
  "description": "Documentation sites for neuroimaging software packages and tools",
  "icon": "ðŸ“¦",
  "commonFields": {
    "package_name": {
      "label": "Package Name",
      "type": "text",
      "required": true,
      "placeholder": "NeuroAnalysis"
    },
    "package_tagline": {
      "label": "Package Tagline",
      "type": "text",
      "required": true,
      "placeholder": "Advanced neuroimaging analysis toolkit"
    },
    "description": {
      "label": "Package Description",
      "type": "textarea",
      "required": true,
      "maxLength": 1000,
      "placeholder": "NeuroAnalysis is a comprehensive Python package for fMRI data preprocessing, analysis, and visualization..."
    },
    "github_repo": {
      "label": "GitHub Repository",
      "type": "url",
      "required": true,
      "placeholder": "https://github.com/username/neuroanalysis"
    },
    "main_language": {
      "label": "Primary Language",
      "type": "select",
      "required": true,
      "options": [
        {"value": "python", "label": "Python"},
        {"value": "matlab", "label": "MATLAB"},
        {"value": "r", "label": "R"},
        {"value": "javascript", "label": "JavaScript"},
        {"value": "cpp", "label": "C++"},
        {"value": "julia", "label": "Julia"}
      ]
    },
    "version": {
      "label": "Current Version",
      "type": "text",
      "required": true,
      "placeholder": "1.2.0"
    },
    "license": {
      "label": "License",
      "type": "select",
      "required": true,
      "options": [
        {"value": "mit", "label": "MIT"},
        {"value": "apache", "label": "Apache 2.0"},
        {"value": "gpl", "label": "GPL v3"},
        {"value": "bsd", "label": "BSD"},
        {"value": "other", "label": "Other"}
      ]
    },
    "maintainer_name": {
      "label": "Maintainer Name",
      "type": "text",
      "required": true,
      "placeholder": "Dr. Jane Smith"
    },
    "maintainer_email": {
      "label": "Maintainer Email",
      "type": "email",
      "required": true,
      "placeholder": "jane.smith@university.edu"
    },
    "installation_command": {
      "label": "Installation Command",
      "type": "text",
      "required": true,
      "placeholder": "pip install neuroanalysis"
    }
  },
  "themes": ["documentation-site", "tutorial-hub", "api-reference"]
}
